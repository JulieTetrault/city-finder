# https://lldb.llvm.org/formats.html

setting set thread-format "thread #${thread.index}: tid = ${thread.id%tid}{, ${frame.pc}}{ ${module.file.basename}{`\033[01;32m${function.name-with-args}\033[00m{${frame.no-debug}${function.pc-offset}}}}{ at ${line.file.basename}:${line.number}}{, name = \033[01;34m'${thread.name}'\033[00m}{, queue = '${thread.queue}'}{, activity = '${thread.info.activity.name}'}{, ${thread.info.trace_messages} messages}{, stop reason = ${thread.stop-reason}}{\nReturn value: ${thread.return-value}}{\nCompleted expression: ${thread.completed-expression}}\n"

settings set frame-format "frame #${frame.index}: ${frame.pc}{ ${module.file.basename}{`\033[01;32m${function.name-with-args}\033[00m{${frame.no-debug}${function.pc-offset}}}}{ at \033[01;34m${line.file.basename}:${line.number}\033[00m}{${function.is-optimized} [optimized]}\n"
